{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": { "productName": "Maya Gold Finance", "version": "2.0.0" },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": { "save": true },
      "fs": { "writeFile": true, "scope": ["$DOWNLOAD/*"] }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.org.mayagoldfinance",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    },
    "security": { "csp": null },
    "windows": [{ "fullscreen": false, "resizable": true, "title": "Maya Gold Finance", "width": 800, "height": 600 }]
  }
}